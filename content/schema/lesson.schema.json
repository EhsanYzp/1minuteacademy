{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://1minuteacademy.dev/schemas/lesson.schema.json",
  "title": "1MinuteAcademy Lesson",
  "type": "object",
  "additionalProperties": true,
  "required": ["version", "totalSeconds", "xp", "steps"],
  "properties": {
    "version": { "type": ["integer", "string"] },
    "totalSeconds": { "type": "integer", "minimum": 10, "maximum": 180 },
    "xp": { "type": "integer", "minimum": 0, "maximum": 500 },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "step.schema.json" }
    }
  }
}
