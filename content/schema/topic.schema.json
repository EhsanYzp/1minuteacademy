{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://1minuteacademy.dev/schemas/topic.schema.json",
  "title": "1MinuteAcademy Topic",
  "type": "object",
  "additionalProperties": false,
  "required": ["id", "version", "subject", "title", "emoji", "color", "description", "difficulty", "published", "story", "quiz"],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "version": { "type": "integer", "minimum": 1 },
    "subject": { "type": "string", "minLength": 1 },
    "subcategory": { "type": "string", "minLength": 1 },
    "categoryTitle": { "type": "string", "minLength": 1 },
    "courseTitle": { "type": "string", "minLength": 1 },
    "courseId": { "type": "string", "minLength": 1 },
    "chapterId": { "type": "string", "minLength": 1 },
    "course_id": { "type": "string", "minLength": 1 },
    "chapter_id": { "type": "string", "minLength": 1 },
    "title": { "type": "string", "minLength": 1 },
    "emoji": { "type": "string", "minLength": 1 },
    "color": { "type": "string", "pattern": "^#([0-9a-fA-F]{3}|[0-9a-fA-F]{6})$" },
    "description": { "type": "string" },
    "difficulty": { "type": "string", "enum": ["Beginner", "Intermediate", "Advanced", "Premium"] },
    "published": { "type": "boolean" },
    "story": { "$ref": "story.schema.json" },
    "quiz": {
      "type": "object",
      "required": ["question", "options", "correct"],
      "properties": {
        "question": { "type": "string", "minLength": 1 },
        "options": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 2,
          "maxItems": 4
        },
        "correct": { "type": "integer", "minimum": 0 }
      }
    },
    "journey": { "$ref": "journey.schema.json" }
  }
}
