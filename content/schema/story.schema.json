{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://1minuteacademy.dev/schemas/story.schema.json",
  "title": "1MinuteAcademy Story",
  "description": "A 6-beat narrative structure for micro-learning modules (8 seconds each)",
  "type": "object",
  "required": ["hook", "buildup", "discovery", "twist", "climax", "punchline"],
  "properties": {
    "hook": { "$ref": "#/$defs/beat" },
    "buildup": { "$ref": "#/$defs/beat" },
    "discovery": { "$ref": "#/$defs/beat" },
    "twist": { "$ref": "#/$defs/beat" },
    "climax": { "$ref": "#/$defs/beat" },
    "punchline": { "$ref": "#/$defs/beat" }
  },
  "$defs": {
    "beat": {
      "type": "object",
      "required": ["text", "visual"],
      "properties": {
        "text": { "type": "string", "minLength": 1 },
        "visual": { "type": "string", "minLength": 1 }
      }
    }
  }
}
