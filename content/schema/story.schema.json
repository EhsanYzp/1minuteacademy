{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://1minuteacademy.dev/schemas/story.schema.json",
  "title": "1MinuteAcademy Story",
  "type": "object",
  "required": ["story", "quiz"],
  "properties": {
    "story": {
      "type": "object",
      "required": ["hook", "discovery", "action", "punchline"],
      "properties": {
        "hook": { "$ref": "#/$defs/beat" },
        "discovery": { "$ref": "#/$defs/beat" },
        "action": { "$ref": "#/$defs/beat" },
        "punchline": { "$ref": "#/$defs/beat" }
      }
    },
    "quiz": {
      "type": "object",
      "required": ["question", "options", "correct"],
      "properties": {
        "question": { "type": "string", "minLength": 1 },
        "options": {
          "type": "array",
          "items": { "type": "string" },
          "minItems": 2,
          "maxItems": 4
        },
        "correct": { "type": "integer", "minimum": 0 }
      }
    }
  },
  "$defs": {
    "beat": {
      "type": "object",
      "required": ["text", "visual"],
      "properties": {
        "text": { "type": "string", "minLength": 1 },
        "visual": { "type": "string", "minLength": 1 }
      }
    }
  }
}
