{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://1minuteacademy.dev/schemas/step.schema.json",
  "title": "Lesson Step",
  "type": "object",
  "additionalProperties": true,
  "required": ["id", "type", "seconds", "title"],
  "properties": {
    "id": { "type": "string", "minLength": 1 },
    "type": {
      "type": "string",
      "enum": ["intro", "tapReveal", "buildChain", "summary"]
    },
    "seconds": { "type": "integer", "minimum": 1, "maximum": 60 },
    "title": { "type": "string", "minLength": 1 }
  }
}
